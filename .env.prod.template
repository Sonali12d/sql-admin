# SQLGym Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values
# SECURITY: Never commit actual .env.prod file to version control
# =============================================================================

# ==================== ENVIRONMENT ====================
ENV=prod

# ==================== DATABASE CONFIGURATION ====================
DATABASE_URL=postgresql://user:password@prod-db-host:5432/sqlgym_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=300

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://prod-redis-host:6379/0
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# ==================== AWS S3 CONFIGURATION ====================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# S3 Bucket Configuration (comma-separated list)
S3_ALLOWED_BUCKETS=sql-learning-datasets,sql-learning-answers,sqlplatform-datasets,sqlplatform-answers

# S3 Limits
S3_MAX_FILE_SIZE_MB=5
S3_MAX_ROWS=1000
S3_MAX_CACHE_ENTRIES=1000
S3_DATASET_MAX_FILE_SIZE_MB=100
S3_DATASET_MAX_ROWS=1000000

# ==================== AUTHENTICATION & SECURITY ====================
JWT_SECRET=your_production_jwt_secret_key_change_this_to_strong_random_value
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=720

ADMIN_SECRET_KEY=your_production_admin_secret_key_change_this_to_strong_random_value

# ==================== OAUTH CONFIGURATION ====================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ==================== EMAIL CONFIGURATION ====================
# Resend API Key
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@sqlgym.com

# ==================== FRONTEND & CORS CONFIGURATION ====================
# Frontend URLs (comma-separated list)
FRONTEND_URLS=https://sqlgym.com,https://www.sqlgym.com

# ==================== AI & MACHINE LEARNING ====================
# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp
AI_HINT_LIMIT_PER_HOUR=5
AI_HINT_LIMIT_PER_PROBLEM=5

# ==================== SERVER CONFIGURATION ====================
PORT=8080
HOST=0.0.0.0
WORKERS=4

# ==================== GOOGLE CLOUD CONFIGURATION ====================
GCP_PROJECT_ID=your-prod-project-id
GCP_REGION=us-central1

# Cloud Run Configuration
CLOUD_RUN_MEMORY=2Gi
CLOUD_RUN_CPU=2
CLOUD_RUN_TIMEOUT=300
CLOUD_RUN_MAX_INSTANCES=20
CLOUD_RUN_MIN_INSTANCES=1
CLOUD_RUN_CONCURRENCY=80

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SUBMISSIONS_PER_MINUTE=10
RATE_LIMIT_WINDOW_SECONDS=60

# ==================== DATA RETENTION ====================
DATA_RETENTION_DAYS=180

# ==================== LOGGING & MONITORING ====================
LOG_LEVEL=WARNING
ENABLE_SQL_LOGGING=false
