# SQLGym Development Environment Configuration
# Copy this file to .env.dev and fill in your actual values
# =============================================================================

# ==================== ENVIRONMENT ====================
# IMPORTANT: ENV should be set to "dev" for development
ENV=dev

# ==================== DATABASE CONFIGURATION ====================
DATABASE_URL=postgresql://user:password@localhost:5432/sqlgym_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=300

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://localhost:6379/0
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30

# ==================== AWS S3 CONFIGURATION ====================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# S3 Bucket Configuration (comma-separated list)
S3_ALLOWED_BUCKETS=sql-learning-datasets-dev,sql-learning-answers-dev,sqlplatform-datasets-dev,sqlplatform-answers-dev

# S3 Limits
S3_MAX_FILE_SIZE_MB=5
S3_MAX_ROWS=1000
S3_MAX_CACHE_ENTRIES=1000
S3_DATASET_MAX_FILE_SIZE_MB=100
S3_DATASET_MAX_ROWS=1000000

# ==================== AUTHENTICATION & SECURITY ====================
JWT_SECRET=your_dev_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=720

ADMIN_SECRET_KEY=your_dev_admin_secret_key_change_this

# ==================== OAUTH CONFIGURATION ====================
# Google OAuth (optional - leave empty to disable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional - leave empty to disable)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ==================== EMAIL CONFIGURATION ====================
# Resend API Key (optional - leave empty to disable email verification)
RESEND_API_KEY=
FROM_EMAIL=dev@sqlgym.com

# ==================== FRONTEND & CORS CONFIGURATION ====================
# Frontend URLs (comma-separated list)
FRONTEND_URLS=http://localhost:5000,http://localhost:3000

# ==================== AI & MACHINE LEARNING ====================
# Google Gemini API Key (optional - leave empty to disable AI hints)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp
AI_HINT_LIMIT_PER_HOUR=10
AI_HINT_LIMIT_PER_PROBLEM=10

# ==================== SERVER CONFIGURATION ====================
PORT=5000
HOST=0.0.0.0
WORKERS=1

# ==================== GOOGLE CLOUD CONFIGURATION ====================
GCP_PROJECT_ID=your-dev-project-id
GCP_REGION=us-central1

# Cloud Run Configuration
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_TIMEOUT=300
CLOUD_RUN_MAX_INSTANCES=3
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_CONCURRENCY=40

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SUBMISSIONS_PER_MINUTE=20
RATE_LIMIT_WINDOW_SECONDS=60

# ==================== DATA RETENTION ====================
DATA_RETENTION_DAYS=30

# ==================== LOGGING & MONITORING ====================
LOG_LEVEL=DEBUG
ENABLE_SQL_LOGGING=true
